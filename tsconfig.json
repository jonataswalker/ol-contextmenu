{
    "compilerOptions": {
        "target": "es2022",
        "module": "ESNext",
        "lib": ["es2022", "DOM", "DOM.Iterable"],
        "moduleResolution": "bundler",

        "outDir": "dist",
        "declarationDir": "dist",

        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "noUnusedParameters": true,
        "useDefineForClassFields": true
    },
    "include": ["**/*.ts", "**/*.js", "**/.*.ts", "**/.*.js"]
}
